---
import BaseLayout from "../layouts/BaseLayout.astro";
import Icon from "../components/Icon.astro";
import data from "../content/packages.json";
const pkg:any = data as any;
const plans:any[] = Array.isArray(pkg?.plans) ? pkg.plans : [];
---
<BaseLayout title={(pkg?.seo?.title || pkg?.title || "패키지/요금") + " | 백조마케팅"} desc={pkg?.seo?.description || pkg?.intro || "영상 제작 + 광고 패키지"} og={pkg?.seo?.og_image}>
  <main id="main">
    <section class="section">
      <div class="container">
        <h1 class="h2">{pkg?.title || "패키지/요금"}</h1>
        <p class="muted">{pkg?.intro}</p>

        <div class="price-grid" style="margin-top:var(--space-4)">
          {plans.map((p, idx) => (
            <div class={idx===0?"price-left":"price-right"}>
              <div class="price-card">
                <div class="box-h"><span class="ico"><Icon name={idx===0?"video":"layers"} /></span><strong>{p.name}</strong></div>
                <div class="price">{p.price_text} <small>{p.note}</small></div>
                <ul>
                  {(p.bullets||[]).map((b:string)=>(<li>{b}</li>))}
                </ul>
                <div style="margin-top:12px"><a class="btn" href={p.cta?.link||"/contact"}>{p.cta?.text||"문의하기"}</a></div>
              </div>
            </div>
          ))}
        </div>

        <p class="muted" style="margin-top:var(--space-3)">{pkg?.extension_note}</p>

        <h2 class="h2" style="margin-top:var(--space-5)">{pkg?.options_title || "옵션"}</h2>
        <div class="grid stack-md" style="row-gap:var(--space-4)">
          {(pkg?.options||[]).map((o:any)=>(
            <div class="meta span-6"><div class="box-h"><span class="ico"><Icon name="zap" /></span><strong>{o.label}</strong></div><p class="muted">{o.price}</p></div>
          ))}
        </div>

        <div style="margin-top:var(--space-5)"><a class="btn" href="/contact">상담문의</a></div>
      </div>
    </section>
  </main>
</BaseLayout>
