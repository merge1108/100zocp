---
import BaseLayout from "../layouts/BaseLayout.astro";
import Icon from "../components/Icon.astro";
import data from "../content/solutions.json";
const s:any = data as any;
---
<BaseLayout title={(s?.seo?.title || s?.title || "솔루션") + " | 백조마케팅"} desc={s?.seo?.description || s?.intro || "영상 제작, 구글/메타 집행, 성과 추적을 한 번에"} og={s?.seo?.og_image}>
  <main id="main">
    <section class="section">
      <div class="container">
        <h1 class="h2">{s?.title || "분양 광고 솔루션"}</h1>
        <p class="muted">{s?.intro}</p>

        <h2 class="h2" style="margin-top:var(--space-5)">이런 점을 해결합니다</h2>
        <div class="grid stack-md" style="row-gap:var(--space-4)">
          {(s?.problems||[]).map((it:any)=>(
            <div class="meta span-6"><div class="box-h"><span class="ico"><Icon name={it.icon} /></span><strong>{it.title}</strong></div><p class="muted">{it.body}</p></div>
          ))}
        </div>

        <h2 class="h2" style="margin-top:var(--space-5)">구성</h2>
        <div class="grid stack-md" style="row-gap:var(--space-4)">
          {(s?.composition||[]).map((it:any)=>(
            <div class="meta span-6"><div class="box-h"><span class="ico"><Icon name={it.icon} /></span><strong>{it.title}</strong></div><p class="muted">{it.body}</p></div>
          ))}
        </div>

        <h2 class="h2" style="margin-top:var(--space-5)">채널 구성</h2>
        <div class="grid stack-md">
          {(s?.channels||[]).map((it:any)=>(
            <div class="meta span-6"><div class="box-h"><span class="ico"><Icon name={it.icon} /></span><strong>{it.title}</strong></div><p class="muted">{it.body}</p></div>
          ))}
        </div>

        <h2 class="h2" style="margin-top:var(--space-5)">진행 흐름</h2>
        <div class="grid stack-md" style="row-gap:var(--space-3)">
          {(s?.flow||[]).map((it:any)=>(
            <div class="meta span-4"><div class="box-h"><span class="ico"><Icon name={it.icon} /></span><strong>{it.title}</strong></div><p class="muted">{it.body}</p></div>
          ))}
        </div>

        <h2 class="h2" style="margin-top:var(--space-5)">영상 업로드 목표</h2>
        <div class="grid stack-md" style="row-gap:var(--space-3)">
          {(s?.upload_goal||[]).map((it:any)=>(
            <div class="meta span-6"><div class="box-h"><span class="ico"><Icon name={it.icon} /></span><strong>{it.title}</strong></div><p class="muted">{it.body}</p></div>
          ))}
        </div>

        <div style="margin-top:var(--space-5);display:flex;gap:12px;flex-wrap:wrap">
          <a class="btn" href={s?.ctas?.primary?.link || "/packages"}>{s?.ctas?.primary?.text || "패키지 보기"}</a>
          {(s?.ctas?.secondary||[]).map((c:any)=>(<a class="btn outline" href={c.link}>{c.text}</a>))}
        </div>
      </div>
    </section>
  </main>
</BaseLayout>
